    <script>
        const loginSection = document.getElementById('login-section');
        const shopSection = document.getElementById('shop-section');
        const animBike = document.getElementById('anim-bike');
        const cartSidebar = document.getElementById('cart-sidebar');
        const cartToggle = document.getElementById('cart-toggle');
        const logout = document.getElementById('logout');
        let cart = [];

        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            animBike.classList.add('active');
            setTimeout(() => {
                loginSection.classList.remove('active');
                shopSection.classList.add('active');
            }, 2500);
        });

        cartToggle.addEventListener('click', (e) => {
            e.preventDefault();
            cartSidebar.classList.toggle('active');
        });

        logout.addEventListener('click', (e) => {
            e.preventDefault();
            shopSection.classList.remove('active');
            loginSection.classList.add('active');
            cart = [];
            updateCart();
        });

        function addToCart(name) {
            cart.push({name, price: Math.floor(Math.random()*5000000)+2000000});
            updateCart();
        }

        function updateCart() {
            const itemsEl = document.getElementById('cart-items');
            const countEl = document.getElementById('cart-count');
            const totalEl = document.getElementById('cart-total');
            itemsEl.innerHTML = '';
            let total = 0;
            cart.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `<span>${item.name}</span><span>Rp ${item.price.toLocaleString('id-ID')}</span>`;
                itemsEl.appendChild(li);
                total += item.price;
            });
            countEl.textContent = cart.length;
            totalEl.textContent = total.toLocaleString('id-ID');
        }
    </script>
